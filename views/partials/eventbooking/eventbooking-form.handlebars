          <div class="form-group col-md-6">
            <label for="price">Price</label>
            <input type="text" class="form-control" id="price" name="price" placeholder="price" value="{{stall.price}}">
          </div>
          <div class="form-group col-md-6">
            <label for="location">Location</label>
            <select id="location_id" class="form-control">
              <option selected>Choose...</option>
              {{#each locations as |location|}}
              <option value="{{location.id}}">{{location.market_name}}</option>
              {{/each}}
            </select>
          </div>
        </div> --}}
        {{#if ../../eventBookingData.eventbooking.id}}
        {{else}}

        <div class="row g-3">
          <div class="form-group col-md-6 ">
            <button type="submit" class="btn btn-primary no-padding"> Confirm Booking of Stall </button>
          </div>
        </div>

        {{/if}}
        <script src="/js/add-eventBooking.js"></script>


        {{!-- End of by each eventsData --}}
        {{/each}}

      </div>
    </div>
  </div>
</form>