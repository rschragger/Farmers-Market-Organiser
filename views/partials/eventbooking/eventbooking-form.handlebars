<form class="new-eventbooking-form">
  <div class="card mb-3" style="max-width: 700px;">
    <div class="row g-0">
      <div class="col-md-2">

        {{#each eventsData as |events|}}
        <img src="/images/logos/{{location.logo_filename}}" class="img-fluid-rounded  " style="width: auto; height: 40px;"
          alt="Logo">
      </div>
      <div class="col-md-7  ">
        <div class="card-body">
          <h2>Stall Booking Form:</h2>

          <h4 class="card-title">{{location.market_name}}</h4>
          <p class="card-text" id="events-id" data-eventsId="{{id}}" data-start="{{timestamp_start}}"
            data-end="{{timestamp_end}}">{{formatDateMulti timestamp_start "dayLong"}} - {{formatDateMulti timestamp_end
            "timeOnly"}}</p>
          {{#each ../stallData as |stall|}}
          <p class="card-text" id="stall-id" data-stallId="{{id}}">No {{id}}. {{stall_name}} - {{description}}</p>

          <p class="card-text" id="stall-price" data-price="{{price}}">Rental price: ${{price}}</p>
          {{#each ../../userStallholder as |user|}}

          <p class="card-text" id="stallholder-id" data-stallholderId="{{user.stallholder.id}}">Stallholder:
            {{user.stallholder.company_name}}</p>

          {{/each}}
          {{/each}}
          {{#each ../eventBookingData as |eventbooking|}}


          {{#if eventbooking.id}}
          <p class="card-text" style="color:red">Booking Present: ID{{eventbooking.id}}: {{eventbooking.description}}
          </p>
          {{else}}
          <div class="row g-3">
            <div class="form-group col-md-6 ">
              <button type="submit" class="btn btn-primary no-padding"> Confirm Booking of Stall </button>
            </div>
          </div>
          {{/if}}

          {{/each}}

          <p class="card-text"><a href="/events/{{id}}">Back to stall booking list</a></p>

        </div>




