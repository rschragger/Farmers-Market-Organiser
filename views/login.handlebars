<div class="card custom-card-form">
	<div class="card-body">
		<h5 class="card-title text-center">Sign In</h5>
		<hr />
		<form id="login-form">
			<div class="row">
				<div class="col">
					<label for="login-username" class="form-label">Username</label>
					<input type="text" class="form-control" id="login-username" required>
				</div>
			</div>
			<div class="row">
				<div class="col">
					<label for="login-password" class="form-label">Password</label>
					<input type="password" class="form-control" id="login-password" required>
				</div>
			</div>
			<button type="submit" class="btn btn-primary btn-form btn-center">SIGN IN</button>
		</form>
  	</div>
   	<hr />
	<div class="row">
		<div class="col">
			<div class="new-user">New User?</div>
			<a href="/signup" class="btn btn-primary btn-form btn-center">SIGN UP</a>
		</div>
	</div>
</div>
<script src="/js/login.js"></script>